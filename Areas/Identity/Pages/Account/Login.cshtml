@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "_AccountLayout";
}
    <div class="text-center">
        <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
    </div>
    <form class="user" id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <input asp-for="Input.Email" id="exampleInputEmail" class="form-control form-control-user" 
            placeholder="Enter Email Address..."
            form-control-user" autocomplete="username" aria-required="true" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Input.Password"
                class="form-control form-control-user"
                                        id="exampleInputPassword" placeholder="Password"                    
            autocomplete="current-password" aria-required="true" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>



        <div class="form-group">
            <div class="custom-control custom-checkbox small">
                <label asp-for="Input.RememberMe" class="custom-control-label">
                    <input class="custom-control-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
        </div>
        <button id="login-submit" type="submit" class="btn btn-primary btn-user btn-block">Login</button>
    </form>
    <hr>
    <div class="text-center">
            <a class="small" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
    </div>
    <div class="text-center">
        <a class="small" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
    </div>
    <div class="text-center">
        <a class="small" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
    </div>








@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
