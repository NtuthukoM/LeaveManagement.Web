@model EmployeeAllocationVM

@{
    ViewData["Title"] = "View Allocations";
}

<h1>View Allocations for @Model.FristName @Model.LastName </h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FristName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FristName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateJoined)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateJoined)
        </dd>
    </dl>
</div>
<hr />

<div class="card">
  <div class="card-header">
    Leave Allocations
  </div>
  <ul class="list-group list-group-flush">
        @foreach(var allocation in Model.LeaveAllocations)
        {            
            <li class="list-group-item">
               <strong>@allocation.LeaveType.Name </strong> 

                <button type="button" class="btn btn-primary position-relative">
                  Allocated
                  <span class="badge rounded-pill bg-danger">
                    @allocation.LeaveType.DefaultDays
                  </span>
                </button>
                &nbsp;&nbsp;
                <button type="button" class="btn btn-primary position-relative">
                  Remaining
                  <span class="badge rounded-pill bg-danger">
                    @allocation.NumberOfDays   
                  </span>
                </button>
                &nbsp;&nbsp;
                <a asp-action="EditAllocation" asp-route-id="@allocation.Id" class="btn btn-warning"> <i class="fas fa-edit"></i> </a> 
            </li>
        }
  </ul>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-dark">Edit</a> |
    <a asp-action="Index" class="btn btn-warning">Back to List</a>
</div>
