@model IEnumerable<LeaveTypeVM>

@{
    ViewData["Title"] = "Index";
}

@section PageHeading{
Leave Types
}

<p>
    <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus-circle"></i></a>
</p>

    <!-- Project Card Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Manage Leave Types</h6>
        </div>
        <div class="card-body">
            <table class="table table-striped" id="leave-type-list">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DefaultDays)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DefaultDays)
                        </td>
                        <td>
                            <button type="button" class="btn btn-primary allocate-btn" data-leave-type-id="@item.Id">Allocate Leave</button>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"> <i class="fas fa-edit"></i> </a> 
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="fas fa-info-circle"></i> </a> 
                            <button type="button" class="btn btn-danger delete-btn" data-leave-type-id="@item.Id"><i class="fas fa-trash"></i></button>
                        </td>
                    </tr>
            }
                </tbody>
            </table>
        </div>
    </div>
    <form asp-action="Delete" id="delete-form">
        <input type="hidden" id="LeaveTypeId" name="Id" />
    </form>

    <form asp-action="AllocateLeave" id="allocate-leave-form">
        <input type="hidden" id="AllocateLeaveLeaveTypeId" name="Id" />
    </form>

    @section Scripts
    {
        <script>
            $(function() {
                 $('.table').DataTable();

                $(".delete-btn").on("click", (e, y) => { 
                    let btn = $(e.currentTarget);
                    swal({
                    title: 'Confirm Delete',
                    text: 'Are you sure you want to delete?',
                    icon: 'warning',
                    buttons: true,
                    dangerMode: true
                    }).then((confirm) => { 
                        if(confirm){
                            debugger;
                            let leaveTypeId = btn.attr('data-leave-type-id');
                            $("#LeaveTypeId").val(leaveTypeId);
                            $("#delete-form").submit();
                        }
                    });
                });

                $(".allocate-btn").on("click", (e, y) => { 
                    let btn = $(e.currentTarget);
                    swal({
                    title: 'Confirm Allocation',
                    text: 'Are you sure you want to allocate leave?',
                    icon: 'warning',
                    buttons: true,
                    dangerMode: true
                    }).then((confirm) => { 
                        if(confirm){
                            debugger;
                            let leaveTypeId = btn.attr('data-leave-type-id');
                            $("#AllocateLeaveLeaveTypeId").val(leaveTypeId);
                            $("#allocate-leave-form").submit();
                        }
                    });
                });
            });
        </script>
    }