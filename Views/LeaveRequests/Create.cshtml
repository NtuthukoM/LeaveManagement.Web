@model LeaveRequestCreateVM

@{
    ViewData["Title"] = "Apply for leave";
}
@section PageHeading{
Apply for leave
}

    <!-- Project Card Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Leave Request</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group col-md-6">
                            <label asp-for="LeaveTypeId" class="control-label"></label>
                            <select asp-for="LeaveTypeId" class ="form-control form-select" 
                                asp-items="Model.LeaveTypes"></select>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="StartDate" class="control-label"></label>
                                    <input asp-for="StartDate" class="form-control datepicker" />
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="EndDate" class="control-label"></label>
                                    <input asp-for="EndDate" class="form-control datepicker" />
                                    <span asp-validation-for="EndDate" type="text" class="text-danger"></span>
                                </div>
                            </div>
                        </div>



                        <div class="form-group col-md-6">
                            <label asp-for="RequestComments" class="control-label"></label>
                            <textarea asp-for="RequestComments" class="form-control" ></textarea>
                            <span asp-validation-for="RequestComments" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                                 <a asp-action="MyLeave" class="btn btn-dark">Back to List</a>
                                <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
        </div>
    </div>